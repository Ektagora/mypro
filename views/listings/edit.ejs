<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mb-3">
        <div class="col-8 offset-2">
            <br><br>        
    <h3 class="mt-3">Edit your listings</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" ><br><br>
        </div>

        <div class="mb-3 >
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
        </div>

        <div class="mb-3 >
            <label for="image" class="form-label">image</label>
            <input id="image" class="form-control" type="file" name="listing[image][url]" value="<%= listing.image.url %>">
        </div>

        <div class="mb-3>
            <label for="price" class="form-label">price</label>
            <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>">

        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="location" class="form-label">location</label>
            <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>" >

        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input class="form-control" type="text" name="listing[country]" value="<%= listing.country %>" >
        </div>
    </div>
        <button class="btn btn-dark edit-btn">Edit</button>
    </form>
</div>
</div>
</body>
